<!DOCTYPE html>
<html>
<head>
  <title>My Projects (Member)</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>My Projects (Member)</h1>
  <a href="/projects">My Projects</a> |
  <a href="/users/leader-projects">My Projects (Leader)</a> |
  <a href="/users/member-projects">My Projects (Member)</a> |
  <a href="/users/archive">Archive</a> |
  <a href="/users/logout">Logout</a>
  <ul>
    <% projects.forEach(project => { %>
      <li>
        <%= project.name %> (Leader: <%= project.leader.username %>)
        <form action="/users/member-projects/<%= project.id %>/update-tasks" method="POST">
          <label for="completedTasks">Completed Tasks:</label>
          <textarea id="completedTasks" name="completedTasks"><%= project.completed_tasks || '' %></textarea>
          <button type="submit">Update Tasks</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>